/ {
    chosen {
        zmk,display = &nice_view;
    };
};

&spi1 {
    status = "okay";

    nice_view: nice_view@0 {
        compatible = "zmk,nice-view";
        reg = <0>;
        spi-max-frequency = <8000000>;
        cs-gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
        dc-gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;
        reset-gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>;
    };
};

