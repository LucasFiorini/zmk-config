&spi1 {
    /* DO NOT touch status or pinctrl */

    nice_view: nice_view@0 {
        compatible = "zmk,nice-view";
        reg = <0>;
        spi-max-frequency = <8000000>;

        /* PandaKB Corne v3 â€“ tested wiring */
        dc-gpios = <&gpio0 18 GPIO_ACTIVE_HIGH>;
        cs-gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;


        /* No reset pin */
    };
};

/ {
    chosen {
        zmk,display = &nice_view;
    };
};

