/ {
    chosen {
        zmk,display = &nice_view;
    };
};

/* enable the SPI bus entry used by the nice_view shield
   and set the CS pin to the Pro Micro/nice!nano D1 pin (P0.06)
   â€” if your board uses a different pin, change the <&pro_micro 6 ...> line */
nice_view_spi: &spi0 {
    status = "okay";
    cs-gpios = <&pro_micro 6 GPIO_ACTIVE_HIGH>;
};

/* ensure the SPI controller is enabled in DT (some boards want &spi0 or &spi1) */
&spi0 {
    status = "okay";
}
